  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>Mini World Inventory Management</h1>
    </section>
    
    <section class="content">
      <div class="card">
                  <div class="card-header">
                    <h3 class="card-title">Stock Details</h3>
              
                    <div class="card-tools">
                      <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i></button>
                      <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i></button>
                    </div>
                  </div>
                  <div class="card-body table-responsive p-0" style="height: 400px;">
                      <table class="table table-striped table-head-fixed text-nowrap">
                      <thead>
                          <tr>
                              <th style="width: 10%" >Mobile ID</th>
                              <th style="width: 10%" >Category</th>
                              <th style="width: 10%" >Name</th>
                              <th style="width: 10%" >Storage</th>
                              <th style="width: 15%" >Quantity</th>
                              <th style="width: 10%" >Price</th>
                              <th style="width: 20%" > </th>
                          </tr>
                      </thead>
                      <tbody>
                          <% for(var i=0; i <data.length;i++) {%>
                              <tr>
                                  <td><%= data[i].M_ID %></td>
                                  <td><%= data[i].M_CAT %></td>
                                  <td><%= data[i].M_NAME %></td>
                                  <td><%= data[i].M_STORAGE %></td>
                                  <!--<td>
                                    <div class="progress progress-xs">
                                        <div class="progress-bar bg-success" style="width:<%= data[i].M_STOCK %>%"></div>
                                      </div>
                                        <small><%= data[i].M_STOCK %></small></td>
                                    -->
                                    <td>
                                      <% if( data[i].M_STOCK < 20) {%>
                                        <div class="progress progress-xs">
                                          <div class="progress-bar bg-danger" style="width:<%= data[i].M_STOCK %>% "></div>
                                        </div>
                                        <small> <%= data[i].M_STOCK %> </small>
                                      <% } else { %>
                                        <div class="progress progress-xs">
                                          <div class="progress-bar bg-success" style="width:<%= data[i].M_STOCK %>% "></div>
                                        </div>
                                        <small> <%= data[i].M_STOCK %> </small>
                                      <% }%>
                                    </td> 
                                  <td><%= data[i].M_PRICE %></td>
                                  <td class="project-actions text-right">
                                      <a class="btn btn-info btn-sm" href="/updatestock"><i class="fas fa-pencil-alt"></i>Edit</a>
                                      <a class="btn btn-danger btn-sm" href="/deletemobile" ><i class="fas fa-trash"></i>Delete</a>
                                  </td>
                              </tr>
                          <% }%>
                          
                      </tbody>
                      </table>
                  </div>
              </div>
      </section>
    <!-- /.content -->
  </div>
