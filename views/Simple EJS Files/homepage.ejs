<html lang="en">
    <head>
        <title>Home Page</title>
        <meta charset="utf-8">
        <meta name="viewpoint" content="width=device-width">
    </head>
    <body>
        <h1>MINI WORLD</h1><br><br>
        <p>Welcome to MINI WORLD online shopping store! One stop solution for all mobiles brands.
            We have mobiles for all types of customers from Featured phone to Flagship phone...!
        </p><br><br><br>

        <a href="/create">Add new mobile</a><br>
        <a href="/updatestock">Update existing mobile</a><br>
        <a href="/deletemobile">Delete mobile</a><br>

        <center>
            <table border="true">
                <tr>
                    <th>Mobile ID</th>
                    <th>Mobile Category</th>
                    <th>Mobile Name</th>
                    <th>Mobile Storage</th>
                    <th>Mobile Stock</th>
                    <th>Mobile price</th>
                </tr>

                <% for(var i=0; i <data.length;i++) {%>
                <tr>
                    <td><%= data[i].M_ID %></td>
                    <td><%= data[i].M_CAT %></td>
                    <td><%= data[i].M_NAME %></td>
                    <td><%= data[i].M_STORAGE %></td>
                    <td><%= data[i].M_STOCK %></td>
                    <td><%= data[i].M_PRICE %></td>
                    <td class="project-actions text-right">
                        <a class="btn btn-info btn-sm" href="#"><i class="fas fa-pencil-alt"></i>Edit</a>
                        <a class="btn btn-danger btn-sm" href="#" ><i class="fas fa-trash"></i>Delete</a>
                    </td>
                </tr>
                <% }%>
            </table>
        </center>
    </body>
</html>